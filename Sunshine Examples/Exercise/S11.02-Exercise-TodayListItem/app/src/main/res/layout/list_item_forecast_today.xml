<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_forestcastToday"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forescastToday_Date"
        tools:src="@drawable/art_clear" />

    <TextView
        android:id="@+id/tv_forescastToday_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#838181"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Today, December 9" />

    <TextView
        android:id="@+id/tv_forestcastToday_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#838181"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/img_forestcastToday"
        app:layout_constraintStart_toStartOf="@+id/img_forestcastToday"
        app:layout_constraintTop_toBottomOf="@+id/img_forestcastToday"
        tools:text="Broken Clouds" />

    <TextView
        android:id="@+id/tv_forestcast_tempMax_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="#838181"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/img_forestcastToday"
        app:layout_constraintTop_toBottomOf="@+id/tv_forescastToday_Date"
        tools:text="15ยบ" />

    <TextView
        android:id="@+id/tv_forestcast_tempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="#838181"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/img_forestcastToday"
        app:layout_constraintTop_toBottomOf="@+id/tv_forestcast_tempMax_"
        tools:text="15ยบ" />
</android.support.constraint.ConstraintLayout>