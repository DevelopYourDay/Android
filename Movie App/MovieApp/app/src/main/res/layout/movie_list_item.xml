<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_serie"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/content_description_cover_serie"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/ThemeTextListSeries"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:padding="4dp"
        android:textColor="@color/PrimaryText"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/img_serie"
        app:layout_constraintTop_toTopOf="@+id/img_serie"
        tools:text="Arrow" />

    <TextView
        android:id="@+id/tv_ep_and_temp"
        style="@style/ThemeTextListSeries"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/LettersListSeries"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_serie"
        app:layout_constraintEnd_toStartOf="@+id/img_add_serie_favorites"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="T04 E02 para assistir; 75 ep. Restantes" />

    <ImageView
        android:id="@+id/img_add_serie_favorites"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_serie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_serie"
        android:contentDescription="@string/content_description_add_serie_favorite"
        tools:src="@android:drawable/btn_star_big_on" />

</android.support.constraint.ConstraintLayout>