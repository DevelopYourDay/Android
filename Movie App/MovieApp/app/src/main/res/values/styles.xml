<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ThemeTextListSeries" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="movie_detail_title" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize"> @dimen/size_title_movie</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="movie_detail_year" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize"> @dimen/size_movie_year</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="movie_detail_duration" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize"> @dimen/size_movie_duration</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="movie_detail_rating" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize"> @dimen/size_movie_rating</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="movie_detail_mark_as_favorite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize"> @dimen/size_movie_rating</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@color/green_wather</item>
        <item name="android:gravity">center</item>
    </style>




</resources>
